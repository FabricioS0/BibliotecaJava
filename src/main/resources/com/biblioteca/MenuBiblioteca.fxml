<AnchorPane prefHeight="200.0" prefWidth="200.0" stylesheets="@Styles/MenuStyle.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.biblioteca.ViewsControllers.MenuBibliotecaController">
   <children>
