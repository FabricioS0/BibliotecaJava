            <Button onAction="#GerenAutor" styleClass="menu-button" stylesheets="@Styles/MenuStyle.css" text="Gerenciar Autores" />
            <Button onAction="#VizuEstatisticas" styleClass="menu-button" stylesheets="@Styles/MenuStyle.css" text="Visualizar Estatísticas" />
