         <children>
            <Label layoutX="14.0" layoutY="15.0" styleClass="AppTitle" text="Gerenciador de Biblioteca" />
         </children>
      </Pane>
      <FlowPane fx:id="buttonContainer" prefHeight="669.0" prefWidth="1280.0" styleClass="button-container">
