<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane maxHeight="720.0" maxWidth="1280.0" minHeight="720.0" minWidth="1280.0"
   prefHeight="720.0" prefWidth="1280.0" stylesheets="@Styles/MenuStyle.css"
   xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
   fx:controller="com.biblioteca.views.Menu">
   <children>
      <Pane maxHeight="54.0" maxWidth="1280.0" minHeight="54.0" minWidth="1280.0" prefHeight="54.0"
         prefWidth="1280.0" styleClass="app-bar">
         <children>
            <HBox maxHeight="54.0" maxWidth="1280.0" minHeight="54.0" minWidth="1280.0"
               prefHeight="54.0" prefWidth="1280.0">
               <children>
                  <Label maxHeight="54.0" maxWidth="150.0" minHeight="54.0" minWidth="150.0"
                     prefHeight="54.0" prefWidth="150.0" styleClass="AppTitle" text="LibManager">
                     <padding>
                        <Insets left="18.0" />
                     </padding>
                  </Label>
                  <Label fx:id="printName" maxHeight="54.0" maxWidth="640.0" minHeight="54.0"
                     minWidth="640.0" prefHeight="54.0" prefWidth="640.0" styleClass="AppWelcome">
                     <padding>
                        <Insets left="18.0" />
                     </padding>
                  </Label>
               </children>
            </HBox>
         </children>
      </Pane>
      <FlowPane layoutY="54.0" maxHeight="666.0" maxWidth="1280.0" minHeight="666.0"
         minWidth="1280.0" prefHeight="666.0" prefWidth="1280.0" styleClass="button-container">
         <children>
            <Button mnemonicParsing="false" onAction="#handleEmprestimos" styleClass="menu-button"
               text="Realizar Empréstimos" textAlignment="CENTER" />
            <Button mnemonicParsing="false" onAction="#handleHistorico" styleClass="menu-button"
               text="Histórico de Empréstimos" textAlignment="CENTER">
               <font>
                  <Font size="24.0" />
               </font>
            </Button>
            <Button mnemonicParsing="false" onAction="#handleDevolucao" styleClass="menu-button"
               text="Realizar Devolução" textAlignment="CENTER">
               <font>
                  <Font size="24.0" />
               </font>
            </Button>
            <Button mnemonicParsing="false" onAction="#handleGerenciarLeitores"
               styleClass="menu-button" text="Gerenciar Leitores" textAlignment="CENTER">
               <font>
                  <Font size="24.0" />
               </font>
            </Button>
            <Button mnemonicParsing="false" onAction="#handleGerenciarLivros"
               styleClass="menu-button" text="Gerenciar Livros" textAlignment="CENTER">
               <font>
                  <Font size="24.0" />
               </font>
            </Button>
            <Button mnemonicParsing="false" onAction="#handleGerenciarAutores"
               styleClass="menu-button" text="Gerenciar Autores" textAlignment="CENTER">
               <font>
                  <Font size="24.0" />
               </font>
            </Button>
            <Button mnemonicParsing="false" onAction="#handleEstatisticas" styleClass="menu-button"
               text="Visualizar Estatísticas" textAlignment="CENTER">
               <font>
                  <Font size="24.0" />
               </font>
            </Button>
         </children>
      </FlowPane>
   </children>
</AnchorPane>